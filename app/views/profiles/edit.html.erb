<section class="pt-14 pb-24 lg:pb-52 lg:pt-40">
  <div class="container">
    <div class="grid grid-cols-12 gap-y-12 md:gap-x-6 lg:gap-x-7.5 content-start">

      <aside class="col-span-full md:col-span-4">
        <div class="sticky lg:top-8 xl:top-10">
          <div class="mb-10">
            <h2 class="mb-1 text-2xl font-bold tracking-tight text-primary dark:text-white md:mb-2 md:text-2xl lg:text-3.5xl"><%= current_user.username %></h2>
            <h3 class="text-lg font-bold leading-tight tracking-tight text-accent lg:text-xl xl:text-[26px]">Bienvenue !</h3>
          </div>
          <nav class="py-1">
            <ul class="flex flex-col gap-y-4 font-bold leading-tight lg:gap-y-6 lg:text-lg">
              <li class="">
                <%= link_to "Mon Profil", edit_profile_path, class: "text-lg transition-all text-primary opacity-100 hover:text-accent dark:text-white dark:hover:text-accent" %>
              </li>
              <li class="">
                <%= link_to "Ma Galerie (prochainement)", "#", class: "text-lg transition-all text-primary opacity-100 hover:text-accent dark:text-white dark:hover:text-accent" %>
              </li>
              <li class="mt-5">
                <%= form_with(url: profile_path, method: :delete) do |form| %>
                  <%= form.submit "Supprimer mon compte", class: "text-red-500 text-lg transition-all opacity-60 hover:opacity-100 hover:text-primary dark:hover:text-white" %>
                <% end %>
              </li>
            </ul>
          </nav>
        </div>
      </aside>

      <div class="col-span-full md:col-span-8">
        <h2 class="mb-8 text-2xl font-bold tracking-tight text-primary dark:text-white md:text-2xl lg:mb-16 lg:text-3.5xl">Informations de ton profil <span class="text-accent"></span></h2>
        <div>

          <div class="text-xl font-bold text-accent mb-8">
            Ces informations permettront d'afficher un lien vers tes r√©seaux sur ta galerie.
          </div>

          <%= form_with(model: current_user, url: profile_path, method: :put, class: "grid grid-cols-6 gap-x-7 gap-y-7 md:gap-x-7 lg:gap-x-[30px]") do |form| %>
            <div class="col-span-full md:col-span-3">
              <%= form.label :youtube_url, "YouTube", class: "dark:text-white" %>
              <%= form.url_field :youtube_url, class: "group-[.is-success]:bg-input-success group-[.is-error]:border-danger group-[.is-error]:bg-input-invalid group-[.is-error]:text-danger group-[.is-success]:pr-16 group-[.is-invalid]:pr-16 border-base bg-[length:14px_14px,_46px_46px] bg-[position:right_26px_center,_right_10px_center] bg-no-repeat font-bold leading-8 tracking-tight text-primary transition-all duration-150 placeholder:font-normal placeholder:text-gray-500/60 focus:border-indigo-500 focus:outline-0 focus:ring-0 dark:border-white/10 dark:bg-gray-800 dark:text-white dark:placeholder:text-gray-500/80 dark:focus:border-indigo-500 w-full px-7 py-4", placeholder: "URL de ton compte YouTube" %>
              <p class="group-[.is-error]:block mt-2 hidden text-sm font-bold text-danger">

              </p>
            </div>
            <div class="col-span-full md:col-span-3">
              <%= form.label :twitch_url, "Twitch", class: "dark:text-white" %>
              <%= form.url_field :twitch_url, class: "group-[.is-success]:bg-input-success group-[.is-error]:border-danger group-[.is-error]:bg-input-invalid group-[.is-error]:text-danger group-[.is-success]:pr-16 group-[.is-invalid]:pr-16 border-base bg-[length:14px_14px,_46px_46px] bg-[position:right_26px_center,_right_10px_center] bg-no-repeat font-bold leading-8 tracking-tight text-primary transition-all duration-150 placeholder:font-normal placeholder:text-gray-500/60 focus:border-indigo-500 focus:outline-0 focus:ring-0 dark:border-white/10 dark:bg-gray-800 dark:text-white dark:placeholder:text-gray-500/80 dark:focus:border-indigo-500 w-full px-7 py-4", placeholder: "URL de ton compte Twitch" %>
              <p class="group-[.is-error]:block mt-2 hidden text-sm font-bold text-danger">

              </p>
            </div>
            <div class="col-span-full pt-8">
              <%= form.submit "Enregistrer", class: "block w-full bg-accent py-5 text-lg font-bold leading-normal tracking-tight text-white transition-colors hover:cursor-pointer hover:bg-accent/90" %>
            </div>
        <% end %>



        </div>
      </div>

    </div>
  </div>
</section>
